@model IEnumerable<INVENNET.Models.DetallesPedido>

@{
    ViewData["Title"] = "Detalles De Pedido";
}

<!-- <h1>@ViewData["Title"]</h1> -->

<p>
@if (User.IsInRole("Administrador"))
{
    <a class="btn btn-success" asp-action="Create">Agregar</a>
    <span> | </span>
    }<a class="btn btn-primary"  asp-area="" asp-controller="Pedidoes" asp-action="Index">Regresar</a>
</p>

<!-- INICIO TABLA -->
<table id="example2" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cantidad</th>
            <th>Subtotal($)</th>
            <th>Fecha de registro</th>
            <th>Pedido</th>
            <th>Producto</th>
                        @if (User.IsInRole("Administrador"))
            {
            <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPedidoNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.Id)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <th>Cantidad</th>
            <th>Subtotal($)</th>
            <th>Fecha de registro</th>
            <th>Pedido</th>
            <th>Producto</th>
                        @if (User.IsInRole("Administrador"))
            {
            <th>Acciones</th>
            }
        </tr>
    </tfoot>
</table>
<!-- /.FIN TABLA -->

@model IEnumerable<INVENNET.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<!-- <h1>@ViewData["Title"]</h1> -->

@if (User.IsInRole("Administrador"))
{
<p>
    <a class="btn btn-success" asp-action="Create">Registrar</a>
</p>
}

<!-- INICIO TABLA -->
<table id="example2" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Estado</th>
            <th>Total($)</th>
            <th>Fecha de registro</th>
            <th>Fecha de aprobación</th>
            <th>Fecha de recepción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAprobacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRecepcion)
            </td>
            <td>
                <a class="btn btn-primary" asp-area="" asp-controller="DetallesPedidoes" asp-action="Index">Detalles</a>
                if (User.IsInRole("Administrador"))
                {
                <span> | </span>
                 <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> | <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                }
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Estado</th>
            <th>Total($)</th>
            <th>Fecha de registro</th>
            <th>Fecha de aprobación</th>
            <th>Fecha de recepción</th>
            <th>Acciones</th>
        </tr>
    </tfoot>
</table>
<!-- /.FIN TABLA -->

@model INVENNET.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<!-- <h1>@ViewData["Title"]</h1> --->

<h3 class="alert alert-danger">¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            Total($)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de aprobación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaAprobacion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de recepción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRecepcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Cancelar</a>
    </form>
</div>

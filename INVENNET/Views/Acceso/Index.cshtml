@using Microsoft.AspNetCore.Identity;
@model Usuario
@{
    Layout = null;
    ViewData["Title"] = "Acceso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InveNET</title>
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <!--  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> -->
    <!--  <link rel="stylesheet" href="~/INVENNET.styles.css" asp-append-version="true" /> -->

    <!-- ESTILOS DE PLANTILLA BOOTSTRAP -->
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/adminlte/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/adminlte/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/adminlte/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/adminlte/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/adminlte/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition dark-mode login-page bg" background="../img/bg.jpg">
    
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake img-circle" src="~/img/logo.png" alt="InveNETLogo" height="100" width="100">
    </div>

    @if (User.IsInRole("Administrador"))
    {
    <div class="row mt-5">
        <div class="col-sm-4 offset-sm-4 text-center">
            <div class="alert alert-success">
                <h2 class="display-4">¡Usted ya inició sesión!</h2>
            </div>
            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Regresar</a>
        </div>
        </div>
    }
    else
    {
    <div class="row mt-5">
        <div class="col-sm-4 offset-sm-4">

    <div class="">
            <!-- LOGIN BOX -->
            <div class="login-box">
                <!-- /.login-logo -->
                <div class="card card-outline card-primary">

                    <div class="card-header text-center">
                            <img src="~/img/icon.png" alt="" height="180" width="180" class="img-circle">
                        <!-- <a class="h1"><b>Inve</b>NET</a> -->
                    </div>

                    <div class="card-body">
                        <p class="login-box-msg">Inicia tu sesión</p>

                        <form asp-controller="Acceso" asp-action="Index" method="post">

                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Usuario" asp-for="Usuario1" required>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="input-group mb-3">
                                <input type="password" class="form-control" placeholder="Contraseña" asp-for="Clave" required>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>

                            
                            <div class="row mt-5">
                                <!-- <div class="col-8">
                                    <div class="icheck-primary">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">
                                            Recuérdame
                                        </label>
                                    </div>
                                </div> -->

                                <!-- /.col -->
                                <div class="col-12 mt-3">
                                    <button type="submit" class="btn btn-success btn-block">ACCEDER</button>
                                </div>
                                <!-- /.col -->
                            </div>

                        </form>

                        <div class="text-center mt-4 mb-3">
                        
                            <a class="btn btn-block btn-primary" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-star mr-2"></i>Invitado
                            </a>

                        </div>
                        <!-- /.social-auth-links -->

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.login-box -->
    </div>
    </div>
    </div>

    <!-- FIN CONTENIDO PAGINA -->
    }



    <!-- <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> -->

    <!-- SCRIPTS PLANTILLA BOOTSTRAP -->
    <!-- jQuery -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/adminlte/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/adminlte/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/adminlte/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/adminlte/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/adminlte/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/adminlte/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/adminlte/plugins/moment/moment.min.js"></script>
    <script src="~/adminlte/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/adminlte/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/adminlte/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/adminlte/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/dist/js/adminlte.js"></script>
</body>
</html>
